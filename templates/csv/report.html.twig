{% extends "base.html.twig" %}
{% block title %}Report{% endblock %}
{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Submitted!</h1>
    <br>
    <h1>Total items found: {{ total }}</h1>
    <br>
    {% for error in errors %}
        <p>{{ error }}</p>
    {% endfor %}
    <br>
    <h1>Items were skipped: {{ skipped }}</h1>
    <br>
    <h1>Items were processed: {{ processed }}</h1>
    <table>
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Stock</th>
            <th>Cost in GBP</th>
            <th>Discontinued</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.productCode }}</td>
                <td>{{ product.productName }}</td>
                <td>{{ product.productDescription }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.cost }}</td>
                <td>{{ product.discontinued }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}